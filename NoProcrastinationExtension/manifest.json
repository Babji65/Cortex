{
  "manifest_version": 3,
  "name": "Cortex",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "scripting",
    "notifications",
    "tts"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "block.html",
      "sounds/study-music.mp3",
      "comments.txt",
      "timer-overlay.css",
      "timer-overlay.js"
    ],
    "matches": ["<all_urls>"]
  }]
}